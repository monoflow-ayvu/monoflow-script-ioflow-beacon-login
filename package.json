{
  "name": "beacon-login",
  "version": "0.0.0",
  "description": "Ao fazer login, ignorar beacon na placa IOFlow.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Velocidade límite (0 = desativar velocidade límite)",
        "suffix": "KM/H",
        "mask": false,
        "tableView": false,
        "defaultValue": 0,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true
        },
        "key": "speedLimit",
        "conditional": {
          "show": true,
          "when": "saveGPS",
          "eq": "true"
        },
        "type": "number",
        "input": true
      },
      {
        "label": "Alertar velocidade desde (pre-alarma; 0 = desativar)",
        "suffix": "KM/H",
        "mask": false,
        "tableView": false,
        "defaultValue": 0,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true
        },
        "key": "speedPreLimit",
        "conditional": {
          "show": true,
          "when": "saveGPS",
          "eq": "true"
        },
        "type": "number",
        "input": true
      },
      {
        "label": "Filtrar excesos de velocidade com detecção de atividade?",
        "tableView": false,
        "key": "overspeedActivityFilter",
        "type": "checkbox",
        "input": true,
        "defaultValue": true
      },
      {
        "label": "Alertar ao usuario ao ter um excesso de velocidade?",
        "tableView": false,
        "key": "warnUserOverspeed",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Parar alerta automaticamente se a velocidad descer do límite?",
        "tableView": false,
        "key": "autoDisableOverSpeedAlert",
        "conditional": {
          "show": true,
          "when": "warnUserOverspeed",
          "eq": "true"
        },
        "type": "checkbox",
        "input": true,
        "defaultValue": true
      },
      {
        "label": "Permitir ao usuario parar alerta clicando botão OK?",
        "tableView": false,
        "defaultValue": true,
        "key": "showOkButtonForAlert",
        "conditional": {
          "show": true,
          "when": "autoDisableOverSpeedAlert",
          "eq": "true"
        },
        "type": "checkbox",
        "input": true
      },
      {
        "label": "Salvar posições GPS?",
        "tableView": false,
        "defaultValue": true,
        "key": "saveGPS",
        "type": "checkbox",
        "input": true
      },
      {
        "label": "Cada quantos minutos salvar posições? (0 = salvar sempre que tiver uma)",
        "suffix": "Minutos",
        "mask": false,
        "tableView": false,
        "defaultValue": 0,
        "delimiter": false,
        "requireDecimal": false,
        "inputFormat": "plain",
        "truncateMultipleSpaces": false,
        "validate": {
          "required": true
        },
        "key": "saveEveryMins",
        "conditional": {
          "show": true,
          "when": "saveGPS",
          "eq": "true"
        },
        "type": "number",
        "input": true
      },
      {
        "label": "Habilitar geocercas?",
        "tableView": false,
        "key": "enableGeofences",
        "type": "checkbox",
        "input": true,
        "defaultValue": false
      },
      {
        "label": "Geocercas",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {
            "name": "",
            "kind": "default",
            "wkt": ""
          }
        ],
        "key": "geofences",
        "conditional": {
          "show": true,
          "when": "enableGeofences",
          "eq": "true"
        },
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Nome",
            "tableView": true,
            "validate": {
              "required": true
            },
            "key": "name",
            "type": "textfield",
            "input": true
          },
          {
            "label": "Tipo",
            "widget": "choicesjs",
            "tableView": true,
            "defaultValue": "default",
            "data": {
              "values": [
                {
                  "label": "Padrão",
                  "value": "default"
                },
                {
                  "label": "Velocidade Límite",
                  "value": "speedLimit"
                },
                {
                  "label": "Abrir form",
                  "value": "openForm"
                },
                {
                  "label": "Abrir tarefa",
                  "value": "openTask"
                },
                {
                  "label": "Mostrar form",
                  "value": "showForm"
                }
              ]
            },
            "validate": {
              "required": true
            },
            "key": "kind",
            "type": "select",
            "case": "lowercase",
            "input": true
          },
          {
            "label": "Geocerca WKT",
            "placeholder": "POLYGON(...",
            "tooltip": "Geocerca no formato WKT (Well-Known Text)",
            "autoExpand": false,
            "tableView": true,
            "validate": {
              "custom": "valid = /^POLYGON(\\s+)?\\(.*\\)$/.test(input) ? true : 'Geocerca inválida';"
            },
            "key": "wkt",
            "type": "textarea",
            "input": true
          },
          {
            "label": "Velocidade límite",
            "suffix": "KM/H",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true
            },
            "key": "speedLimit",
            "conditional": {
              "show": true,
              "when": "geofences.kind",
              "eq": "speedLimit"
            },
            "type": "number",
            "input": true
          },
          {
            "label": "Alerta pre-límite",
            "tooltip": "Velocidade mínima para iniciar os alarmes de velocidade.",
            "suffix": "KM/H",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true
            },
            "key": "speedPreLimit",
            "conditional": {
              "show": true,
              "when": "geofences.kind",
              "eq": "speedLimit"
            },
            "type": "number",
            "input": true
          },
          {
            "label": "Tags",
            "tooltip": "Se pelo menos uma tag é inclusa no dispositivo, login, ou dado do usuario, a geocerca é usada com o dispositivo.\n\nSe não tiver tag, a geocerca é aplicada para todos os dispositivos.",
            "tableView": false,
            "storeas": "array",
            "key": "tags",
            "type": "tags",
            "input": true
          },
          {
            "label": "ID Tarefa/Form",
            "tableView": true,
            "truncateMultipleSpaces": true,
            "validate": {
              "required": true
            },
            "key": "id",
            "customConditional": "show = row.kind === 'openForm' || row.kind === 'openTask' || row.kind === 'showForm';",
            "type": "textfield",
            "autoExpand": false,
            "input": true
          },
          {
            "label": "Quando ativar",
            "optionsLabelPosition": "right",
            "tableView": false,
            "values": [
              {
                "label": "Ao sair",
                "value": "onExit",
                "shortcut": ""
              },
              {
                "label": "Ao entrar",
                "value": "onEnter",
                "shortcut": ""
              }
            ],
            "key": "when",
            "customConditional": "show = row.kind === 'openForm' || row.kind === 'openTask';",
            "type": "selectboxes",
            "input": true,
            "inputType": "checkbox"
          }
        ]
      },
      {
        "label": "Impossibilidades",
        "tooltip": "Configurações para dados que sejam impossíveis de reportar físicamente pelos dispositivos.",
        "reorder": true,
        "addAnother": "Adicionar",
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": true,
        "tableView": false,
        "defaultValue": [
          {
            "tags": []
          }
        ],
        "key": "impossible",
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Tags",
            "tooltip": "Se pelo menos uma tag é inclusa no dispositivo, login, ou dado do usuario, a impossibilidade é usada com o dispositivo.\n\nSe NÃO tiver tag, a impossibilidade é aplicada para TODOS os dispositivos.",
            "tableView": false,
            "storeas": "array",
            "key": "tags",
            "type": "tags",
            "input": true
          },
          {
            "label": "Velocidade impossível",
            "tooltip": "É impossível o dispositivo chegar até essa velocidade ou maior.",
            "suffix": "KM/H",
            "mask": false,
            "tableView": false,
            "delimiter": false,
            "requireDecimal": false,
            "inputFormat": "plain",
            "truncateMultipleSpaces": false,
            "validate": {
              "required": true
            },
            "key": "maxSpeed",
            "type": "number",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "pnpm build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "node --expose-gc ./node_modules/jest/bin/jest --runInBand --logHeapUsage"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/plugin-transform-arrow-functions": "7.20.7",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "8.1.2",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "27.5.2",
    "@types/lodash": "4.14.191",
    "@types/node": "18.11.18",
    "@types/uuid": "9.0.0",
    "@types/wellknown": "0.5.4",
    "babel-loader": "9.1.2",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "10.0.0",
    "compression-webpack-plugin": "10.0.0",
    "graphql": "16.6.0",
    "graphql-request": "5.1.0",
    "inquirer": "9.1.4",
    "jest": "28.1.3",
    "mobx-keystone": "1.2.0",
    "semver": "7.3.8",
    "size-limit": "8.1.2",
    "ts-loader": "9.4.2",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.4",
    "webpack": "5.75.0",
    "webpack-cli": "5.0.1"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "11.10.0",
    "@turf/boolean-point-in-polygon": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "cross-fetch": "3.1.5",
    "firebase": "9.16.0",
    "lodash": "4.17.21",
    "mobx": "6.7.0",
    "wellknown": "0.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
