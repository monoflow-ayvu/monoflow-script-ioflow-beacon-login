{
  "name": "beacon-login",
  "version": "1.14.0",
  "description": "Ao fazer login, ignorar beacon na placa IOFlow.",
  "settingsSchema": {
    "display": "form",
    "components": [
      {
        "label": "Beacons",
        "reorder": false,
        "addAnotherPosition": "bottom",
        "layoutFixed": false,
        "enableRowGroups": false,
        "initEmpty": false,
        "tableView": false,
        "defaultValue": [
          {}
        ],
        "key": "beacons",
        "type": "datagrid",
        "input": true,
        "components": [
          {
            "label": "Login",
            "tableView": true,
            "validate": {
              "required": true
            },
            "unique": true,
            "key": "login",
            "type": "textfield",
            "input": true
          },
          {
            "label": "MAC",
            "inputMask": "**:**:**:**:**:**",
            "displayMask": "**:**:**:**:**:**",
            "tableView": true,
            "case": "uppercase",
            "validate": {
              "custom": "valid = /(([0-9A-F]{2}[:-]?){6})/.test(input) ? true : 'MAC inv√°lida';"
            },
            "key": "mac",
            "type": "textfield",
            "input": true
          }
        ]
      },
      {
        "type": "button",
        "label": "Submit",
        "key": "submit",
        "disableOnInvalid": true,
        "input": true,
        "tableView": false
      }
    ]
  },
  "license": "EULA",
  "private": true,
  "scripts": {
    "build": "webpack --mode production",
    "watch": "webpack --mode production --watch",
    "build-copy": "pnpm build && (cat dist/bundle.js | pbcopy) && du -sh dist/*.js",
    "size": "npm run build && size-limit",
    "deploy": "node .scripts/deploy.js",
    "deploy-force": "node .scripts/deploy.js --force",
    "minor": "npm run build && bump minor --commit --tag --push --all",
    "release": "npm run build && bump major --commit --tag --push --all",
    "test": "node --expose-gc ./node_modules/jest/bin/jest --runInBand --logHeapUsage"
  },
  "browserslist": [
    "ie 6"
  ],
  "size-limit": [
    {
      "path": "dist/bundle.js",
      "limit": "100 kb",
      "gzip": false
    }
  ],
  "devDependencies": {
    "@babel/core": "7.23.0",
    "@babel/plugin-transform-arrow-functions": "7.22.5",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-typescript": "7.23.0",
    "@jsdevtools/version-bump-prompt": "6.1.0",
    "@size-limit/preset-big-lib": "9.0.0",
    "@types/commander": "2.12.2",
    "@types/firebase": "3.2.1",
    "@types/jest": "29.5.5",
    "@types/lodash": "4.14.199",
    "@types/node": "18.18.4",
    "@types/uuid": "9.0.5",
    "@types/wellknown": "0.5.6",
    "babel-loader": "9.1.3",
    "brotli-webpack-plugin": "1.1.0",
    "commander": "11.0.0",
    "compression-webpack-plugin": "10.0.0",
    "graphql": "16.8.1",
    "graphql-request": "6.1.0",
    "inquirer": "9.2.11",
    "jest": "29.7.0",
    "mobx-keystone": "1.6.5",
    "semver": "7.5.4",
    "size-limit": "9.0.0",
    "ts-loader": "9.5.0",
    "typed-emitter": "2.1.0",
    "typescript": "4.9.5",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4"
  },
  "dependencies": {
    "@fermuch/monoutils": "0.2.0",
    "@fermuch/telematree": "11.10.0",
    "@turf/boolean-point-in-polygon": "^6.5.0",
    "@turf/helpers": "^6.5.0",
    "cross-fetch": "3.1.8",
    "firebase": "9.23.0",
    "lodash": "4.17.21",
    "mobx": "6.10.2",
    "wellknown": "0.5.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/private/jest/setup.ts"
    ]
  }
}
